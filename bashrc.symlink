# aliases
alias ..='cd ..'
alias l='ls -la'
alias ll='ls -l'
alias lld='ls -l | grep ^d'

# custom scripts
export MY_BIN=~/bin
export PATH=$MY_BIN:$PATH

export MY_EDITOR="mvim -v";
export EDITOR="vim"

# add ~/.node_libraries to the node path
export NODE_PATH=~/.node_libraries

# setting a custom prompt, with git branch info
export PS1='[\u:\W]\$ '
